<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Buttons-->
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/calibri_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="ButtonStyle.Large">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ButtonStyle.Large.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>
    <style name="ButtonStyle.Large.Primary.Outline">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/bg_btn_primary_outline</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:fontFamily">@font/calibri_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:background">@drawable/bg_btn_transparent</item>
    </style>

    <style name="ImageButtonStyle.Primary">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@drawable/bg_btn_primary_round</item>
    </style>

    <!--Edit Text-->
    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/calibri_regular</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/bg_et</item>
        <item name="android:textColorHint">@color/gray30</item>
    </style>

    <style name="EditTextStyle.Search">

<!--        android:textColorHint="@color/gray30"-->
<!--        android:fontFamily="@font/calibri_regular"-->
<!--        android:background="@drawable/bt_et_white"-->
<!--        android:textSize="20dp"-->
        <item name="android:textColorHint">@color/gray30</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
        <item name="android:background">@drawable/bt_et_white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!--Text-->
    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextStyle.XSmall">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:fontFamily">@font/itim_regular</item>
    </style>

    <style name="TextStyle.Title.Medium">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TextStyle.Title.XSmall">
        <item name="android:textSize">18dp</item>
    </style>
</resources>